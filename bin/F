#!/bin/bash
sack__vim_shortcut=$(sed -n "$1p" < /home/randy/.sack_shortcuts)
sack__line=`echo $sack__vim_shortcut | cut -d" " -f1`
sack__file=`echo $sack__vim_shortcut | sed 's/'$sack__line' //'`
if [ -z "$EDITOR" ]; then
    sack__editor="vim"
else
    sack__editor="$EDITOR"
fi
$sack__editor +$sack__line "$sack__file"
