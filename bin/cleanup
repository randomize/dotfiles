#!/bin/bash
# vim: ft=sh

echo "<<<<< Starting cleanup >>>>>"

echo "<<<<< History files >>>>>"

rm -rf ~/.sqlite_history
rm -rf ~/.lesshst
rm -rf ~/.python_history
rm -rf ~/.gdb_history
rm -rf ~/.root_hist
rm -rf ~/.sdcv_history
rm -rf ~/.recently-used
rm -rf ~/.wget-hsts
rm -rf ~/.thumbnails/
rm -rf ~/.octave_hist
rm -rf ~/.cgdb/readline_history.txt

echo "<<<<< Logs >>>>>"
rm -rf ~/.local/share/xorg
rm -rf ~/.local/share/copyq

echo "<<<<< Cache files >>>>>"
rm -rf ~/.xdg_menu_cache/
rm -rf ~/.tgdb/
rm -rf ~/.config/unity3d/

echo "<<<<< AUR temp stuff >>>>>"
# Sometimes left by AUR packages being compiling
rm -rf ~/.cmake/
rm -rf ~/.subversion/

echo "<<<<< Unknown trash >>>>>"
# Sometimes left by AUR packages being compiling
rm -rf ~/.java/
